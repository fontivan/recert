{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "docker": {
        "_comment": "We want to make sure the image digests in the konflux Dockerfile get updates",
        "fileMatch": [
            "\\.*Dockerfile$"
        ],
        "includePaths": [
            ".konflux/"
        ]
    },
    "extends": [
        "https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
    ],
    "tekton": {
        "_comment": "We want the Tekton Mintmaker PRs to merge automatically because they would otherwise be very noisy",
        "automerge": true,
        "automergeStrategy": "rebase",
        "automergeType": "pr",
        "enabled": true,
        "ignoreTests": false,
        "platformAutomerge": true,
        "schedule": ["0 1 * * *"]
    }
}
