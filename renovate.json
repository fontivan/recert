{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "automergeStrategy": "rebase",
    "automergeType": "pr",
    "docker": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "fileMatch": [
            "\\.*Dockerfile\\.*"
        ],
        "ignoreTests": false,
        "includePaths": [
            ".konflux/"
        ],
        "platformAutomerge": true
    },
    "prConcurrentLimit": 0,
    "pruneBranchAfterAutomerge": true,
    "tekton": {
        "autoApprove": true,
        "automerge": true,
        "enabled": true,
        "fileMatch": [
            "\\.yaml$",
            "\\.yml$"
        ],
        "ignoreTests": false,
        "includePaths": [
            ".tekton/**"
        ],
        "platformAutomerge": true
    }
}
